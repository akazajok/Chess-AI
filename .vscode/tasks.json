{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Chess Game",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}\\src\\*.cpp",
                "-I",
                "${workspaceFolder}\\include",
                "-o",
                "${workspaceFolder}\\ChessGame.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Biên dịch toàn bộ project cờ vua"
        }
    ]
}